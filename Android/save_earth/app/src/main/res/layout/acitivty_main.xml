<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/reportButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/space"
        android:layout_alignParentTop="true"
        android:layout_marginTop="82dp"
        android:layout_marginLeft="22dp"
        android:width="123dp"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:text="Report" />

    <Button
        android:id="@+id/helpButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/reportButton"
        android:layout_alignBottom="@+id/reportButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="52dp"
        android:layout_marginRight="22dp"
        android:width="123dp"
        android:background="@android:color/holo_red_light"
        android:gravity="center"
        android:text="Help" />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/reportButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:ems="10"
        android:gravity="center"
        android:inputType="none"

        android:focusable="false"

        android:clickable="false"
        android:text="Notifications" />

    <Button
        android:id="@+id/earthquakeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/reportButton"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_marginStart="19dp"
        android:visibility="gone"
        android:text="Earthquake" />

    <Button
        android:id="@+id/cycloneButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/earthquakeButton"
        android:layout_below="@+id/reportButton"
        android:visibility="gone"
        android:text="Cyclone" />

    <Button
        android:id="@+id/otherButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/floodButton"
        android:layout_below="@+id/helpButton"
        android:visibility="gone"
        android:text="Other" />

    <Button
        android:id="@+id/floodButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/earthquakeButton"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="48dp"
        android:visibility="gone"
        android:text="Flood" />

    <Space
        android:id="@+id/space"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/reportButton"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="15dp" />



</RelativeLayout>